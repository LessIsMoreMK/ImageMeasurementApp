<Window x:Class="ImageMeasurementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMeasurementApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" 
                Grid.Row="0" 
                Content="Open" Margin="5"  
                Height="25" 
                VerticalAlignment="Top"
                Command="{Binding LoadImageCommand}"/>


        <Border Grid.Row="0" Grid.Column="1" 
                BorderThickness="2" BorderBrush="AliceBlue" 
                Height="Auto" Width="Auto" Margin="5">
            <Image x:Name="imageHolder" 
                   Source="{Binding ImagePath}" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" 
                   Stretch="Fill"/>
        </Border>
    </Grid>
</Window>
